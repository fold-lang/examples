-- Views
-- https://ghc.haskell.org/trac/ghc/wiki/ViewPatterns#Examples
type conc_list 'a =
  | Empty
  | Single 'a
  | Concat (conc_list 'a) (conc_list 'a)

val view : conc_list 'a -> list 'a
def view Empty = []
  | view (Single a) = [a]
  | view (Concat (view left_head left_tail) right) = left_head

match x with
| (x y) ->
| (view x) x y





