--
-- Binary search
-- http://rosettacode.org/wiki/Binary_search#Metaphor
--


def binary_search :: {Ord a} -> List a -> a -> Int?
def binary_search haystack needle =
  let search l h =
    let m = (low + high) / 2 in
    when
    | h < l                -> None
    | haystack[m] > needle -> search l (m - 1)
    | haystack[m] < needle -> search (m + 1) h
    | otherwise            -> Some m
    end
  in
    search 0 (#haystack - 1)


