module Option =
  type Self a = Some a | None

  self ? default =
    case self of:
      Some a -> a
      None   -> default


instance Functor Option =
  map f self =
    case self of:
      Some a -> Some (f a)
      None   -> None


instance Monad Option =
  pure = Some

  bind f self =
    case self of:
      Some a -> f a
      None   -> None














